@model IEnumerable<WebstarMasterApp.Models.SalesData>

@{
    ViewBag.Title = "Index";
}
<main>
    <h2>Sales Data</h2>
    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KitchenAndBath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeAndGarden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Electronics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BooksAndMedia)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KitchenAndBath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeAndGarden)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Electronics)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BooksAndMedia)
                </td>
                <td class="text-right">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })

                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    }
                </td>
            </tr>
        }

    </table>
</main>